<Window x:Class="Converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Converter"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" 
        Width="250"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True">

    <Window.Resources>
        <Style x:Key="ComboBoxButton" TargetType="Button">
            <Setter Property="OverridesDefaultStyle"
                    Value="True"/>
            <Setter Property="Background" Value="#FF272537"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="Border" BorderThickness="0" BorderBrush="#FF333842" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            
                            <EventTrigger RoutedEvent="PreviewMouseDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.100" To="1,1,0,0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>

                            <EventTrigger RoutedEvent="PreviewMouseUp">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <ThicknessAnimation Storyboard.TargetProperty="Margin" Duration="0:0:0.100" To="0"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                            
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ArrowDownImage" TargetType="Image">
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="Source" Value="/MVVM/View/Images/arrow_down_dark.png"/>
        </Style> 
    </Window.Resources>
    
    
    <Border 
        Background="#272537"
        CornerRadius="20">
        
        <Grid>            
            <Grid.RowDefinitions>
                <RowDefinition Height="70"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="70"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid  Name="ToolBar" 
                Grid.Row="0"                 
                Background="Transparent"
                MouseDown="ToolBar_MouseDown">

                <Polygon Fill="White" 
                         Opacity="0.8"
                         Points="57,0,
                         65,7,
                         189,7,
                         197,0"/>


                <StackPanel 
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Margin="7">

                    <Image Name="Minimaze" 
                           Height="15"
                           Width="15" 
                           Margin="0,1,5,3"
                           MouseDown="Minimaze_MouseDown">
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Images/minimaze.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=Minimaze}" Value="true">
                                        <Setter Property="Source" Value="Images/minimaze_active.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>

                    <Image Name="CloseWindow" 
                            Height="13"
                            Width="13" 
                            MouseDown="CloseWindow_MouseDown"
                           Margin="1,1,3,1"
                           >
                        <Image.Style>
                            <Style TargetType="{x:Type Image}">
                                <Setter Property="Source" Value="Images/x.png"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsMouseOver, ElementName=CloseWindow}" Value="true">
                                        <Setter Property="Source" Value="Images/x_active.png"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Image.Style>
                    </Image>
                </StackPanel>  
                
            </Grid>

            <Grid Name="FirstCurrencyLine"
                  Grid.Row="1">
                <TextBox x:Name="CurrencyFirst"                 
                    Grid.Row="1"                    
                    Margin="5,25,5,5"
                    TextChanged="CurrentFirst_TextChanged"
                    VerticalAlignment="Top"
                             
                    Style="{StaticResource ModernTextBox}"/>

                <Border 
                      Grid.Row="1"
                      Height="25"
                      Width="55"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="35,33,0,0"
                      CornerRadius="2" >

                    <Button x:Name="FirstCurrencyListButton"
                            Style="{StaticResource ComboBoxButton}">
                        
                        <Image x:Name="ArrowDownFirstCurrency"
                               Width="20"
                               Margin="35,0,0,0"
                               Style="{StaticResource ArrowDownImage}"
                               MouseDown="ArrowDownFirstCurrency_MouseDown"/>
                    </Button>                   
                </Border>

                <Grid Name="LeftGrid"
                      Grid.Row="1"
                      Visibility="Hidden">
                <Polygon Fill="#353340" StrokeThickness="2" 
                         Points="0,8,
                         0,70,
                         70,70,
                         70,8,
                         50,8,
                         42,0,
                         34,8"
                         Margin="36,58,144,184"/>
                
                <Polygon  
                         StrokeThickness="1"
                         Points="0,8,
                         0,70,
                         70,70,
                         70,8,
                         50,8,
                         42,0,
                         34,8"
                         Margin="36,58,144,184"
                         Stroke="#FF40454E"/>

                <StackPanel Orientation="Vertical"
                            Margin="37,67,145,185">
                    <Button Style="{StaticResource ComboBoxButton}">
                        <TextBlock Text="EUR" 
                                   Foreground="#CFCFCF"
                                   TextAlignment="Left"
                                   Height="20"/>
                    </Button>
                    
                    <Button Style="{StaticResource ComboBoxButton}">
                        <TextBlock Text="DLR" 
                                   Foreground="#CFCFCF"
                                   TextAlignment="Left"
                                   Height="20"/>
                    </Button>
                    
                    <Button Style="{StaticResource ComboBoxButton}">
                        <TextBlock Text="CZK" 
                                   Foreground="#CFCFCF"
                                   TextAlignment="Left"
                                   Height="20"/>
                    </Button>
                    
                </StackPanel>
                </Grid>
                
                <Border Name="Arrow"
                        Grid.Row="1"
                        CornerRadius="12"
                        Background="#353340"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Margin="52,82,52,52"
                        Width="27"
                        Height="26">
                    <Grid>
                        <Rectangle StrokeThickness="1"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,7"/>
                        <Image Name="Direct"
                               Height="19"
                               Width="20">
                            <Image.Style>
                                <Style TargetType="{x:Type Image}">
                                    <Setter Property="Source" Value="Images/Down.png"/>
                                </Style>
                            </Image.Style>
                        
                        </Image>
                    </Grid>
                </Border>

            </Grid>
            <Grid Name="SecondCurrencyLine"
                    Grid.Row="1">
                    <TextBox Name="CurrencySecond"               
                    Grid.Row="1"
                    Text="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="25,128,0,0"
                    Style="{StaticResource ModernTextBox}"/>

                    <Border 
                      Grid.Row="1"
                      Height="25"
                      Width="55"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="35,133,0,0"
                      CornerRadius="2">

                    <Button x:Name="SecondCurrencyListButton" 
                            Style="{StaticResource ComboBoxButton}">

                        <Image x:Name="ArrowDownSecondCurrency"
                               Width="20"
                               Margin="35,0,5,0"
                               Style="{StaticResource ArrowDownImage}"
                               MouseDown="ArrowDownSecondCurrency_MouseDown"/>
                    </Button>
                    </Border>
                </Grid>
            
            <Grid Name="RightGrid"
                  Grid.Row="1"
                  Visibility="Hidden">
                <Polygon Fill="#353340"
                         StrokeThickness="2" 
                         Points="0,8,
                                0,70,
                                70,70,
                                70,8,
                                50,8,
                                42,0,
                                34,8"
                 Margin="36,158,144,84"/>

                <Polygon StrokeThickness="1"
                         Points="0,8,
                                 0,70,
                                 70,70,
                                 70,8,
                                 50,8,
                                 42,0,
                                 34,8"
                          Margin="36,158,144,84"
                 Stroke="#FF40454E"/>

                 <StackPanel Orientation="Vertical"
                                        Margin="37,167,145,85">
                    <Button Style="{StaticResource ComboBoxButton}">
                                    
                       <TextBlock Text="EUR" 
                                  Foreground="#CFCFCF"
                                  TextAlignment="Left"
                                  Height="20"/>
                    </Button>

                    <Button Style="{StaticResource ComboBoxButton}">
                        <TextBlock Text="DLR" 
                                   Foreground="#CFCFCF"
                                   TextAlignment="Left"
                                   Height="20"/>
                    </Button>

                    <Button Style="{StaticResource ComboBoxButton}">
                         <TextBlock Text="CZK" 
                                    Foreground="#CFCFCF"
                                    TextAlignment="Left"
                                    Height="20"/>
                    </Button>
                 </StackPanel>
            </Grid>

            <Grid Name="BasementLine"
                  Grid.Row="2">
                  <Border Grid.Row="2">
                      <Grid VerticalAlignment="Bottom">
                          <Polygon Fill="White" 
                                 Opacity="0.8"
                                 Points="57,7,
                                 65,0,
                                 189,0,
                                 197,7"/>
                      </Grid>
                  </Border>   
            </Grid>
            
    
        </Grid>
        
    </Border>
    
</Window>
